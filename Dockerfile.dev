# =============================================
# Accordo Frontend - Development Dockerfile
# Runs vite dev with hot-reload (mirrors local dev)
# =============================================

FROM node:20-alpine

# Install curl for health check
RUN apk add --no-cache curl

WORKDIR /app

# Copy package files and install ALL dependencies
COPY package*.json ./
RUN npm install --legacy-peer-deps

# Source code is mounted as a volume â€” not copied during build.
# This enables hot-reload with Vite HMR.

ENV NODE_ENV=development

EXPOSE 5001

HEALTHCHECK --interval=30s --timeout=10s --start-period=20s --retries=3 \
    CMD curl -f http://localhost:5001/ || exit 1

# Run vite dev server (host 0.0.0.0 allows access from outside the container)
CMD ["npx", "vite", "--host", "0.0.0.0", "--port", "5001"]
