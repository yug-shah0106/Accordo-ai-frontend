# =============================================
# Accordo Frontend - Environment Variables
# =============================================
# Copy this file to .env.local for local development
# For Docker/production, pass these as build args

# Backend API URL (required)
# The URL where the Accordo backend API is running
VITE_BACKEND_URL=http://localhost:5002

# Frontend URL (required)
# The URL where this frontend is served
VITE_FRONTEND_URL=http://localhost:5001

# Asset URL (optional)
# URL for serving static assets, defaults to backend URL
VITE_ASSEST_URL=http://localhost:5002

# Development server settings (local development only)
VITE_DEV_HOST=0.0.0.0
VITE_DEV_PORT=5001
